$cache = __DIR__.'/../cache';

touch($old = $cache.'/.old', 1);
touch($cutoff = $cache.'/.cutoff',  $t = (time() - 1));

passthru(
	'find '.escapeshellarg($cache)
	.' -maxdepth 1 -type f'
	.' \( -not -name "sess_*" \)'
	.' -newer '.escapeshellarg($old)
	.' \( -not -newer '.escapeshellarg($cutoff).' \)'
	.' -delete'
);
